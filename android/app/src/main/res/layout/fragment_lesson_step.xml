<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="lessonStepViewModel"
            type="ru.spbstu.amd.learnbraille.screens.lessons.LessonStepViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--        TODO extract layout_weight to variable-->
        <Button
            android:id="@+id/prev_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/forwardButton"
            android:onClick="@{() -> lessonStepViewModel.prevStep()}"
            android:text="@string/lessons_prev"
            android:textColor="@color/colorText" />

        <ViewStub
            android:id="@+id/lesson_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout="@layout/inner_lesson_info" />

        <ViewStub
            android:id="@+id/lesson_symbol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout="@layout/inner_lesson_symbol" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/forwardButton"
            android:onClick="@{() -> lessonStepViewModel.nextStep()}"
            android:text="@string/lessons_next"
            android:textColor="@color/colorText" />

    </LinearLayout>

</layout>